@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping search</legend>
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
