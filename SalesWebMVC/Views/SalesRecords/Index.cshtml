@{
	ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="row">
	<div class="col-md-6">
		<form class="card border-primary mb-3" asp-action="SimpleSearch">
			<div class="card-header bg-dark text-white" style="font-size: 1.5rem;">Simple search</div>
			<div class="card-body pb-0">
				<div class="form-group">
					<label for="minDate">Min Date</label>
					<input type="date" name="minDate" class="form-control" />
				</div>
				<div class="form-group">
					<label for="maxDate">Max Date</label>
					<input type="date" name="maxDate" class="form-control" />
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-info">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<form class="card border-primary mb-3" asp-action="GroupingSearch">
			<div class="card-header bg-dark text-white" style="font-size: 1.5rem;">Grouping search</div>
			<div class="card-body pb-0">
				<div class="form-group">
					<label for="minDate">Min Date</label>
					<input type="date" name="minDate" class="form-control" />
				</div>
				<div class="form-group">
					<label for="maxDate">Max Date</label>
					<input type="date" name="maxDate" class="form-control" />
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-info">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>
