@model SalesWebMVC.Models.ViewModels.SalesFormViewModels
@{
	ViewData["Title"] = "Create";
}
<h2>@ViewData["Title"]</h2>
<h4>Sales Records</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div class="form-group">
				<label asp-for="Sales.Date" class="control-label"></label>
				<input asp-for="Sales.Date" class="form-control" />
				<span asp-validation-for="Sales.Date" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sales.Amount" class="control-label"></label>
				<input asp-for="Sales.Amount" class="form-control" />
				<span asp-validation-for="Sales.Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sales.Status" class="control-label"></label>
				<select asp-for="Sales.Status" class="form-control">
					<option value="">Selecione o status</option>
					@foreach (var status in Model.SalesStatuses)
					{
						<option value="@status">@status</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Sales.SellerId" class="control-label"> Seller Name</label>
				<select asp-for="Sales.SellerId" asp-items="@(new SelectList(Model.Sellers,"Id", "Name"))" class="form-control"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-success" />
				<a asp-action="Index" class="btn btn-primary ml-2">Back to List</a>
			</div>
			
		</form>
	</div>
</div>